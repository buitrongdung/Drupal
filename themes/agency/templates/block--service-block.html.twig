{% extends "block.html.twig" %}

{% set attributes = attributes.addClass('service-block') %}
{% block content %}
    <!-- Service -->
<div id="service" class="section md-padding">

    <!-- Container -->
    <div class="container">

        <!-- Row -->
        <div class="row">

            <!-- Section header -->
            <div class="section-header text-center">
                <h2 class="title">What we offer</h2>
            </div>
            <!-- /Section header -->
            {% if list_service %}
                {% for service in list_service %}
                    <!-- service -->
                    <div class="col-md-4 col-sm-6">
                        <div class="service">
                            <i class="fa fa-diamond"></i>
                            <h3>{{ service.title }}</h3>
                            <p>{{ service.desc }}</p>
                        </div>
                    </div>
                    <!-- /service -->
                {% endfor %}
            {% endif %}

        </div>
        <!-- /Row -->

    </div>
    <!-- /Container -->

</div>
<!-- /Service -->
{% endblock %}
